@model LecturesClaimingSystem.Models.Lecturer

@{
    ViewData["Title"] = "Delete Lecturer";
}

<div class="container mt-5">
    <h1 class="text-center text-danger">Delete Lecturer</h1>
    <h3 class="text-center">Are you sure you want to delete this?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">Department</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Department)</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-3">Claimed Hours</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ClaimedHours)</dd>

        <dt class="col-sm-3">Claim Date</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ClaimDate)</dd>
    </dl>

    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
